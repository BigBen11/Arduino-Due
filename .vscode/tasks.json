{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make",
            "command": "make",
            "args": [
                "-j$(nproc)"
            ],
            "type": "shell",
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "silent"
            },
            "group": "build"
        },
        {
            "label": "OpenOCD",
            "detail": "Startet OpenOCD in einem Terminal.",
            "command": "make",
            "args": [
                "openocd"
            ],
            "promptOnClose": true,
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "Clean",
            "detail": "Loescht den 'build' Ordner.",
            "command": "make",
            "args": [
                "clean"
            ]
        }
    ]
}